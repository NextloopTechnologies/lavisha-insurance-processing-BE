generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // Optional, for migrations
}
// Define your database models here

enum Role {
  SUPER_ADMIN
  ADMIN
  HOSPITAL
}

model User { 
  id String @id @default(uuid()) 
  email String @unique 
  password String 
  name String 
  role Role 
  tokens String[] @default([])
  hospitalName String?
  documents Document[]
  comment Comment[]
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt 
} 

model Patient {
  id            String   @id @default(uuid())
  name          String
  age           Int
  insuranceRequests InsuranceRequest[]
  documents     Document[]
  createdAt     DateTime @default(now())
}

model Document {
  id          String   @id @default(uuid())
  url         String
  fileName    String
  type        String
  version     Int?     
  uploadedBy  String
  patientId   String
  insuranceRequestId String
  uploadedAt  DateTime @default(now())
  uploader    User    @relation(fields: [uploadedBy], references: [id])
  patient     Patient  @relation(fields: [patientId], references: [id])
  insuranceRequest InsuranceRequest? @relation(fields: [insuranceRequestId], references: [id])
}

enum DocumentType {
  ICP
  CLINIC_PAPER
  PAST_INVESTIGATION
  CURRENT_INVESTIGATION
  ESTIMATE
  DIAGNOSTIC
  SUMMARY
  FINAL_BILL
  ENHANCEMENT_ESTIMATE
  DISCHARGE_SUMMARY
  SETTLEMENT_LETTER
  EXCEL_REPORT
  OTHER
}

model InsuranceRequest {
  id          String   @id @default(uuid())
  patientId   String
  description String?
  doctorName  String
  tpaName     String
  assignedTo  String?
  status      ClaimStatus @default(SUBMITTED)
  enhancements Enhancement[]
  comments    Comment[]
  documents   Document[]
  additionalNotes String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  patient     Patient  @relation(fields: [patientId], references: [id])
}

enum ClaimStatus {
  SUBMITTED
  QUERIED
  APPROVED
  DENIED
  DISCHARGED
  SETTLED
}

model Enhancement {
  id                 String   @id @default(uuid())
  insuranceRequestId String
  raisedAt           DateTime @default(now())
  respondedAt        DateTime?
  status             EnhancementStatus @default(PENDING)
  notes              String?
  insuranceRequest   InsuranceRequest @relation(fields: [insuranceRequestId], references: [id])
}

enum EnhancementStatus {
  PENDING
  SENT_TO_TPA
  APPROVED
  DENIED
}

model Comment {
  id          String   @id @default(uuid())
  text        String
  type        CommentType
  insuranceRequestId String
  fileUrl     String?
  createdBy   String
  createdAt   DateTime @default(now())
  creator    User    @relation(fields: [createdBy], references: [id])
  insuranceRequest InsuranceRequest @relation(fields: [insuranceRequestId], references: [id])
}

enum CommentType {
  NOTE
  QUERY
  TPA_REPLY
  DOCUMENT_UPLOAD
}

model ActivityLog {
  id          String   @id @default(uuid())
  userId      String
  action      String
  targetType  String
  targetId    String
  timestamp   DateTime @default(now())
}

